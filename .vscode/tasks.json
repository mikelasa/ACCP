{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "configure hardware_interfaces",
            "type": "shell",
            "command": "cmake",
            "args": [
                "..",
                "-DCMAKE_INSTALL_PREFIX=${env:HOME}/.local",
                "-DCMAKE_POLICY_VERSION_MINIMUM=3.5",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
            ],
            "options": {
                "cwd": "${workspaceFolder}/hardware_interfaces/build"
            },
            "problemMatcher": []
        },
        {
            "label": "build test_joints_franka",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "hardware_interfaces/build",
                "--target",
                "test_joints_franka",
                "-j"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "C/C++: g++ build active file",
            "type": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
